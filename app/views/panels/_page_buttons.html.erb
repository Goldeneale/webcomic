<div class="col-md-4 col-md-offset-4">
    <nav aria-label="...">
        <ul class="pager">
        <% unless @panel.page == 1 %>
            <li><%= link_to "<<<", page_path(page: Panel.order(:page).first.page), class: "btn btn-default" %></li>
            <li><%= link_to "<--", page_path(page: @panel.page - 1), class: "btn btn-default" %></li>
        <% end %>
        
        <% unless @panel.page == Panel.order(:page).last.page %>
            <li><%= link_to "-->", page_path(page: @panel.page + 1), class: "btn btn-default" %></li>
            <li><%= link_to ">>>", page_path(page: Panel.last.page), class: "btn btn-default" %></li>
        <% end %>
        </ul>
    </nav>
</div>